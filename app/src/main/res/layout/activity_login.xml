<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16sp"
    tools:context=".user.login.LoginActivity">

        <TextView
            android:id="@+id/font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="170sp"
            android:fontFamily="@font/inter_bold"
            android:textColor="?attr/colorOnSecondary"
            android:text="@string/login_activity_label"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/email_hint"
            android:inputType="textEmailAddress"
            android:autofillHints="emailAddress"
            android:minHeight="48sp"
            android:maxWidth="300sp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:autofillHints="password"
            android:minHeight="48sp"
            android:maxWidth="300sp" />

        <TextView
            android:id="@+id/signup_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/signup_prompt"
            android:textColor="?attr/colorPrimary"
            android:paddingTop="8sp"
            android:layout_marginEnd="86sp"/>

        <Button
            android:id="@+id/login_button"
            android:layout_width="225sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/login"
            app:cornerRadius="18sp" />
</androidx.appcompat.widget.LinearLayoutCompat>
